{
  "manifest_version": 2,

  "name": "Recipes Extension",
  "description": "This extension is a recipes tool",
  "version": "1.0.0",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Recipes Extension"
  },
  "icons": {
    "16": "recipes-icon.png",
    "48": "recipes-icon.png",
    "128": "recipes-icon.png"
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ]
}
